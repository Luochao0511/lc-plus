{
  "increment": true,
  "github": {
    "release": true
  },
  "git": {
    "tagName": "docs@v${version}"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "after:bump": "echo 更新版本成功"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": "package.json",
      "out": "package.json"
    }
  }
}
