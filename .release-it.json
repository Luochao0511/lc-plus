{
  "github": {
    "release": true
  },
  "git": {
    "tagName": "docs@v${version}"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "after:bump": "echo 更新版本成功,开心啊"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "header": "# Changelog",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": "true"
    }
  }
}
