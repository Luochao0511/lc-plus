{
  "github": {
    "release": true
  },
  "git": {
    "tagName": "docs@v${version}"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "after:bump": "echo 更新版本成功",
    "after:release": "npm publish"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "header": "# Changelog",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": "true"
    },
    "@release-it/bumper": {
      "in": {
        "file": "package.json",
        "type": "text/plain",
        "consumeWholeFile": true
      },
      "out": {
        "file": "package.json",
        "type": "text/plain",
        "consumeWholeFile": true
      }
    }
  }
}
